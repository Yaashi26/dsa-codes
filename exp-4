#include <stdio.h>
#include <stdlib.h>

int *Queue;
int front = -1;
int rear = -1;
int maxSize;

int enqueue(int x) {
    if ((front == 0 && rear == maxSize - 1) || (rear == front - 1)) {
        printf("Queue is full\n");
        return 0;
    }
    if (front == -1) {
        front = rear = 0;
    } else if (rear == maxSize - 1) {
        rear = 0;
    } else {
        rear++;
    }
    Queue[rear] = x;
    return 1;
}

int dequeue() {
    int data;
    if (front == -1) {
        printf("Queue is empty\n");
        return 0;
    }
    data = Queue[front];
    if (front == rear) {
        front = rear = -1;
    } else if (front == maxSize - 1) {
        front = 0;
    } else {
        front++;
    }
    return data;
}

int checkfront() {
    if (front == -1) {
        printf("Queue is empty\n");
        return 0;
    }
    return Queue[front];
}

int checkrear() {
    if (rear == -1) {
        printf("Queue is empty\n");
        return 0;
    }
    return Queue[rear];
}

int isfull() {
    if ((front == 0 && rear == maxSize - 1) || (rear == front - 1)) {
        printf("Queue is full\n");
        return 1;
    }
    return 0;
}

int isEmpty() {
    if (front == -1) {
        printf("Queue is empty\n");
        return 1;
    }
    return 0;
}

int main() {
    int choice, x, op;

    printf("Enter the size of the circular queue: ");
    scanf("%d", &maxSize);

    Queue = (int *)malloc(maxSize * sizeof(int));
    if (Queue == NULL) {
        printf("Memory allocation failed. Exiting.\n");
        return 1;
    }

    do {
        printf("\nMENU\n");
        printf("1. Insert\n");
        printf("2. Delete\n");
        printf("3. Check Front\n");
        printf("4. Check Rear\n");
        printf("5. IsFull\n");
        printf("6. IsEmpty\n");
        printf("7. Exit\n");

        printf("Enter your choice = ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter the number to be inserted = ");
                scanf("%d", &x);
                op = enqueue(x);
                if (op == 0)
                    printf("Element not inserted.\n");
                else
                    printf("Element inserted.\n");
                break;

            case 2:
                op = dequeue();
                if (op == 0)
                    printf("Element not deleted.\n");
                else
                    printf("Element deleted.\n");
                break;

            case 3:
                op = checkfront();
                if (op == 0)
                    printf("Queue is empty\n");
                else
                    printf("%d is at the front of the queue.\n", op);
                break;

            case 4:
                op = checkrear();
                if (op == 0)
                    printf("Queue is empty\n");
                else
                    printf("%d is at the rear of the queue.\n", op);
                break;

            case 5:
                op = isfull();
                if (op == 0)
                    printf("Queue is NOT full.\n");
                else
                    printf("Queue is full.\n");
                break;

            case 6:
                op = isEmpty();
                if (op == 0)
                    printf("Queue is NOT empty.\n");
                else
                    printf("Queue is empty.\n");
                break;

            case 7:
                printf("Exiting program.\n");
                break;

            default:
                printf("Invalid Option...\n");
        }
    } while (choice != 7);

    free(Queue);
    return 0;
}
